<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00aaff"
        android:orientation="vertical"

        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previous" />

            <TextView
                android:id="@+id/YearMonth"
                android:layout_width="@dimen/yearMonth_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/yearMonth_topMargin"
                android:hint="@string/YearMonth"
                android:textSize="@dimen/yearMonth_textSize" />

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weekdays_height"
            android:gravity="center_horizontal"
            android:columnCount="7"
            android:orientation="horizontal"
            android:rowCount="1">
            <TextView
                android:id="@+id/Sun"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="@string/Sun"
                android:textSize="@dimen/weekDays_textSize"
                />
            <TextView
                android:id="@+id/Mon"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:gravity="center_horizontal"

                android:hint="@string/Mon"
                android:textSize="@dimen/weekDays_textSize"
                />
            <TextView
                android:id="@+id/Tue"
                android:layout_column="2"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:gravity="center_horizontal"

                android:hint="@string/Tue"
                android:textSize="@dimen/weekDays_textSize"
                />
            <TextView
                android:id="@+id/Wed"
                android:layout_column="3"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:hint="@string/Wed"
                android:textSize="@dimen/weekDays_textSize"
                />
            <TextView
                android:id="@+id/Thu"
                android:layout_column="4"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:hint="@string/Thu"
                android:textSize="@dimen/weekDays_textSize"
                />
            <TextView
                android:id="@+id/Fri"
                android:layout_column="5"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="@string/Fri"
                android:textSize="@dimen/weekDays_textSize"
                />
            <TextView
                android:id="@+id/Sat"
                android:layout_column="6"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"

                android:hint="@string/Sat"
                android:textSize="@dimen/weekDays_textSize"
                />
        </LinearLayout>



</LinearLayout>